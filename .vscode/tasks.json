{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "go: build",
      "type": "shell",
      "command": "go build ./...",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "go: test",
      "type": "shell",
      "command": "go test ./...",
      "group": "test",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "go: lint",
      "type": "shell",
      "command": "golangci-lint run ./...",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "readerer: sample",
      "type": "shell",
      "command": "go",
      "args": [
        "run",
        "./cmd/readerer",
        "-url",
        "https://mariosakata.medium.com/remember-mediumjapan-2f7ce526611c"
      ],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "db: show context",
      "type": "shell",
      "command": "sqlite3 readerer.db \"SELECT w.word, ws.context_sentence FROM word_sources ws JOIN words w ON ws.word_id = w.id LIMIT 20;\"",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "clean: db",
      "type": "shell",
      "command": "rm -f readerer.db",
      "problemMatcher": []
    },
    {
      "label": "clean: dictionary",
      "type": "shell",
      "command": "rm -f jmdict-eng-common.json",
      "problemMatcher": []
    }
  ]
}
