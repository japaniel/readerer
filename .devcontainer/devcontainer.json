{
  "name": "readerer Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "remoteUser": "vscode",
  "postCreateCommand": "go version || true && mkdir -p /workspace/.gopath/{bin,pkg/mod/cache/download} && chown -R $(id -u):$(id -g) /workspace/.gopath",
  "containerEnv": {
    "GOPATH": "/workspace/.gopath",
    "GOMODCACHE": "/workspace/.gopath/pkg/mod",
    "GOPROXY": "https://proxy.golang.org,direct"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "go.toolsEnvVars": {
          "GOBIN": "/go/bin"
        },
        "go.useLanguageServer": true
      },
      "extensions": [
        "golang.go",
        "eamodio.gitlens",
        "ms-vscode-remote.remote-containers"
      ]
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],
  // If you need Keeper SSH agent in the container, add the following mount locally before opening the devcontainer:
  // "source=<path-to-keeper-socket-on-host>,target=/run/keeper-ssh-agent.sock,type=bind"
  // Example (host-only change):
  //   "mounts": [
  //     "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  //     "source=${localEnv:KEEPER_SSH_SOCKET},target=/run/keeper-ssh-agent.sock,type=bind"
  //   ],
  "workspaceFolder": "/workspace"
}
